# ---------- Build (SSR) ----------
FROM node:22-alpine AS build
WORKDIR /usr/src/app
COPY package*.json ./
RUN npm ci
COPY . .
# angular.json has outputMode: "server" -> emits browser + server
RUN npm run build

# ---------- Runtime (Node SSR) ----------
FROM node:22-alpine
WORKDIR /usr/src/app
ENV NODE_ENV=production
ENV PORT=4000
COPY --from=build /usr/src/app/dist ./dist
EXPOSE 4000
CMD ["node","dist/iot-irrigation-dashboard/server/server.mjs"]
